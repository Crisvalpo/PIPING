'use client'

import { useEffect, useState } from 'react'
import { useRouter } from 'next/navigation'
import { getAllEmpresasWithStats, updateEmpresaStatus, deleteEmpresa, createEmpresaAdmin, createProyecto } from '@/services/super-admin'
import { createInvitacion } from '@/services/invitaciones'
import ProtectedRoute from '@/components/ProtectedRoute'
import type { Empresa } from '@/types'

// Tipo extendido para incluir detalles de proyectos
interface EmpresaWithStats extends Empresa {
    proyectos: { id: string, nombre: string, count?: number }[]
}

function GestionEmpresasContent() {
    const router = useRouter()
    const [empresas, setEmpresas] = useState<EmpresaWithStats[]>([])
    const [loading, setLoading] = useState(true)
    const [processing, setProcessing] = useState<string | null>(null)

    // Estados para invitaci√≥n
    const [showInviteModal, setShowInviteModal] = useState(false)
    const [selectedEmpresaForInvite, setSelectedEmpresaForInvite] = useState<EmpresaWithStats | null>(null)
    const [inviteEmail, setInviteEmail] = useState('')
    const [inviteLink, setInviteLink] = useState<string | null>(null)

    // Estados para creaci√≥n de empresa
    const [showCreateModal, setShowCreateModal] = useState(false)
    const [newEmpresaData, setNewEmpresaData] = useState({
        nombre: '',
        descripcion: '',
        crearProyecto: true,
        proyectoNombre: ''
        // Por ahora solo usamos LukeApp (Supabase)
        // Google Sheets y SharePoint: Pr√≥ximamente
    })

    // Estados para creaci√≥n de proyecto en empresa existente
    const [showProjectModal, setShowProjectModal] = useState(false)
    const [selectedEmpresaForProject, setSelectedEmpresaForProject] = useState<Empresa | null>(null)
    const [newProjectData, setNewProjectData] = useState({
        nombre: '',
        descripcion: ''
    })

    useEffect(() => {
        loadData()
    }, [])

    async function loadData() {
        const data = await getAllEmpresasWithStats()
        // La transformaci√≥n ya viene del servicio, solo aseguramos el tipo
        setEmpresas(data as EmpresaWithStats[])
        setLoading(false)
    }

    async function handleInvite() {
        if (!selectedEmpresaForInvite || !inviteEmail) return

        const roleSelect = document.getElementById('role-selector') as HTMLSelectElement
        const projectSelect = document.getElementById('project-selector') as HTMLSelectElement
        const role = roleSelect?.value || 'ADMIN_EMPRESA'
        const projectId = projectSelect?.value || undefined

        if (role === 'ADMIN_PROYECTO' && !projectId) {
            alert('Para un Admin de Proyecto, debes seleccionar un proyecto.')
            return
        }

        setProcessing('invite')
        const result = await createInvitacion(inviteEmail, selectedEmpresaForInvite.id!, role, projectId)

        if (result.success && result.data) {
            setInviteLink(result.data.link)
        } else {
            alert('Error: ' + result.message)
        }
        setProcessing(null)
    }

    async function handleCreateEmpresa() {
        if (!newEmpresaData.nombre) return
        if (newEmpresaData.crearProyecto && !newEmpresaData.proyectoNombre) return

        setProcessing('create')

        // Por ahora solo usamos LukeApp (Supabase)
        const result = await createEmpresaAdmin({
            nombre: newEmpresaData.nombre,
            descripcion: newEmpresaData.descripcion,
            tipoDatos: 'lukeapp',
            dataConfig: {},
            crearProyecto: newEmpresaData.crearProyecto,
            proyectoNombre: newEmpresaData.proyectoNombre
        })

        if (result.success) {
            setShowCreateModal(false)
            setNewEmpresaData({
                nombre: '',
                descripcion: '',
                crearProyecto: true,
                proyectoNombre: ''
            })
            loadData()
            alert('‚úÖ Empresa creada exitosamente')
        } else {
            alert('Error: ' + result.message)
        }
        setProcessing(null)
    }

    async function handleCreateProject() {
        if (!selectedEmpresaForProject || !newProjectData.nombre) return

        setProcessing('createProject')

        // Por ahora solo usamos LukeApp (Supabase)
        const result = await createProyecto({
            empresaId: selectedEmpresaForProject.id!,
            nombre: newProjectData.nombre,
            descripcion: newProjectData.descripcion,
            configOrigen: {}
        })

        if (result.success) {
            setShowProjectModal(false)
            setNewProjectData({ nombre: '', descripcion: '' })
            loadData()
            alert('‚úÖ Proyecto creado exitosamente')
        } else {
            alert('Error: ' + result.message)
        }
        setProcessing(null)
    }

    async function handleStatusChange(id: string, currentStatus: string) {
        const newStatus = currentStatus === 'ACTIVA' ? 'INACTIVA' : 'ACTIVA'
        if (!confirm(`¬øEst√°s seguro de cambiar el estado a ${newStatus}?`)) return

        setProcessing(id)
        const result = await updateEmpresaStatus(id, newStatus)

        if (result.success) {
            setEmpresas(empresas.map(e => e.id === id ? { ...e, estado: newStatus } : e))
        } else {
            alert('Error: ' + result.message)
        }
        setProcessing(null)
    }

    async function handleDelete(id: string) {
        const empresa = empresas.find(e => e.id === id)
        if (!empresa) return

        const proyectosCount = empresa.proyectos?.length || 0

        // Verificaci√≥n previa: Mostrar advertencia clara si hay proyectos
        if (proyectosCount > 0) {
            alert(`‚ö†Ô∏è ADVERTENCIA: Esta empresa tiene ${proyectosCount} proyecto(s) asociado(s).\n\n` +
                `No se puede eliminar hasta que elimines primero todos sus proyectos.`)
            return
        }

        // Confirmaci√≥n final
        const confirmDelete = `¬øEst√°s seguro de ELIMINAR la empresa "${empresa.nombre}"?\n\n` +
            `‚ö†Ô∏è Esta acci√≥n NO se puede deshacer.\n` +
            `Si tiene usuarios asociados, la eliminaci√≥n fallar√°.`

        if (!confirm(confirmDelete)) return

        setProcessing(id)
        const result = await deleteEmpresa(id)

        if (result.success) {
            setEmpresas(empresas.filter(e => e.id !== id))
            alert('‚úÖ ' + result.message)
        } else {
            alert('‚ùå ' + result.message)
        }
        setProcessing(null)
    }

    if (loading) {
        return (
            <div className="min-h-screen flex items-center justify-center bg-gradient-to-br from-gray-900 via-purple-900 to-violet-900">
                <div className="animate-spin rounded-full h-16 w-16 border-t-2 border-b-2 border-white"></div>
            </div>
        )
    }

    return (
        <div className="min-h-screen bg-gradient-to-br from-gray-900 via-purple-900 to-violet-900 p-4">
            <div className="max-w-7xl mx-auto">
                {/* Header */}
                <div className="flex justify-between items-center mb-8">
                    <div>
                        <button
                            onClick={() => router.push('/admin/super')}
                            className="text-gray-300 hover:text-white mb-2 flex items-center text-sm"
                        >
                            ‚Üê Volver al Panel
                        </button>
                        <h1 className="text-3xl font-bold text-white">Gesti√≥n de Empresas</h1>
                        <p className="text-gray-400">Listado de empresas registradas en el sistema</p>
                    </div>
                    <button
                        onClick={() => setShowCreateModal(true)}
                        className="px-4 py-2 bg-green-600 hover:bg-green-700 text-white rounded-lg font-bold shadow-lg flex items-center gap-2 transition-all"
                    >
                        <svg className="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M12 4v16m8-8H4" />
                        </svg>
                        Nueva Empresa
                    </button>
                </div>

                {/* Lista de Empresas */}
                <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    {empresas.map((empresa) => (
                        <div
                            key={empresa.id}
                            className="backdrop-blur-xl bg-white/5 border border-white/10 rounded-2xl p-6 hover:bg-white/10 transition-all group"
                        >
                            <div className="flex justify-between items-start mb-4">
                                <div className="p-3 bg-purple-500/20 rounded-xl group-hover:bg-purple-500 transition-colors">
                                    <svg className="w-8 h-8 text-purple-300 group-hover:text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                                    </svg>
                                </div>
                                <span className={`px-2 py-1 rounded text-xs font-bold border ${empresa.estado === 'ACTIVA'
                                    ? 'bg-green-500/20 text-green-300 border-green-500/30'
                                    : 'bg-red-500/20 text-red-300 border-red-500/30'
                                    }`}>
                                    {empresa.estado || 'ACTIVA'}
                                </span>
                            </div>

                            <h3 className="text-xl font-bold text-white mb-2">{empresa.nombre}</h3>
                            <p className="text-gray-400 text-sm mb-4 line-clamp-2">
                                {empresa.descripcion || 'Sin descripci√≥n'}
                            </p>

                            <div className="border-t border-white/10 pt-4 mt-4 mb-4 flex justify-between items-center text-sm text-gray-300">
                                <span>Proyectos Activos:</span>
                                <div className={`flex items-center gap-2 px-2 py-1 rounded ${(empresa.proyectos?.length || 0) > 0
                                    ? 'bg-orange-500/20 border border-orange-500/30'
                                    : 'bg-white/5'
                                    }`}>
                                    <span className={`font-bold ${(empresa.proyectos?.length || 0) > 0 ? 'text-orange-300' : 'text-white'
                                        }`}>
                                        {empresa.proyectos?.length || 0}
                                    </span>
                                    {(empresa.proyectos?.length || 0) > 0 && (
                                        <span className="text-xs text-orange-300">‚ö†Ô∏è</span>
                                    )}
                                </div>
                            </div>

                            {/* Botones de acci√≥n */}
                            <div className="grid grid-cols-2 gap-2">
                                <button
                                    onClick={() => {
                                        setSelectedEmpresaForInvite(empresa)
                                        setShowInviteModal(true)
                                    }}
                                    className="col-span-2 px-3 py-2 bg-blue-500/20 text-blue-300 hover:bg-blue-500/30 border border-blue-500/30 rounded-lg text-sm font-medium transition-all flex items-center justify-center gap-2"
                                >
                                    <svg className="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                                    </svg>
                                    Invitar Admin
                                </button>

                                <button
                                    onClick={() => {
                                        setSelectedEmpresaForProject(empresa)
                                        setShowProjectModal(true)
                                    }}
                                    className="col-span-2 px-3 py-2 bg-purple-500/20 text-purple-300 hover:bg-purple-500/30 border border-purple-500/30 rounded-lg text-sm font-medium transition-all flex items-center justify-center gap-2"
                                >
                                    <svg className="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                                    </svg>
                                    Agregar Proyecto
                                </button>

                                <button
                                    onClick={() => handleStatusChange(empresa.id!, empresa.estado || 'ACTIVA')}
                                    disabled={processing === empresa.id}
                                    className={`px-3 py-2 rounded-lg text-sm font-medium transition-all ${empresa.estado === 'ACTIVA'
                                        ? 'bg-yellow-500/20 text-yellow-300 hover:bg-yellow-500/30 border border-yellow-500/30'
                                        : 'bg-green-500/20 text-green-300 hover:bg-green-500/30 border border-green-500/30'
                                        } disabled:opacity-50 disabled:cursor-not-allowed`}
                                >
                                    {processing === empresa.id ? '...' : empresa.estado === 'ACTIVA' ? 'Desactivar' : 'Activar'}
                                </button>
                                <button
                                    onClick={() => handleDelete(empresa.id!)}
                                    disabled={processing === empresa.id}
                                    className="px-3 py-2 bg-red-500/20 text-red-300 hover:bg-red-500/30 border border-red-500/30 rounded-lg text-sm font-medium transition-all disabled:opacity-50 disabled:cursor-not-allowed"
                                >
                                    {processing === empresa.id ? '...' : 'Eliminar'}
                                </button>
                            </div>
                        </div>
                    ))}
                </div>

                {/* Modal de Invitaci√≥n */}
                {showInviteModal && selectedEmpresaForInvite && (
                    <div className="fixed inset-0 bg-black/50 backdrop-blur-sm flex items-center justify-center p-4 z-50">
                        <div className="bg-gray-900 border border-white/10 rounded-2xl p-6 max-w-md w-full shadow-2xl">
                            <h3 className="text-xl font-bold text-white mb-2">Generar Invitaci√≥n</h3>
                            <p className="text-gray-400 text-sm mb-4">
                                Para: <strong>{selectedEmpresaForInvite.nombre}</strong>
                            </p>

                            {inviteLink ? (
                                <div className="space-y-4">
                                    <div className="bg-green-500/20 border border-green-500/30 p-4 rounded-xl">
                                        <p className="text-green-300 text-sm font-bold mb-2">¬°Invitaci√≥n Generada!</p>
                                        <div className="flex items-center gap-2 bg-black/30 p-2 rounded border border-white/10">
                                            <code className="text-xs text-gray-300 break-all flex-1">{inviteLink}</code>
                                            <button
                                                onClick={() => {
                                                    navigator.clipboard.writeText(inviteLink)
                                                    alert('Enlace copiado al portapapeles')
                                                }}
                                                className="p-1 hover:bg-white/10 rounded"
                                            >
                                                üìã
                                            </button>
                                        </div>
                                    </div>
                                    <button
                                        onClick={() => {
                                            setShowInviteModal(false)
                                            setInviteLink(null)
                                            setInviteEmail('')
                                        }}
                                        className="w-full py-2 bg-white/10 hover:bg-white/20 text-white rounded-lg transition-colors"
                                    >
                                        Cerrar
                                    </button>
                                </div>
                            ) : (
                                <div className="space-y-4">
                                    {/* Selector de Rol */}
                                    <div>
                                        <label className="block text-sm font-medium text-gray-300 mb-1">Rol del Invitado</label>
                                        <select
                                            className="w-full px-4 py-2 bg-black/30 border border-white/20 rounded-lg text-white focus:outline-none focus:border-blue-500"
                                            id="role-selector"
                                            defaultValue="ADMIN_EMPRESA"
                                        >
                                            <option value="ADMIN_EMPRESA">Admin de Empresa (Control Total)</option>
                                            <option value="ADMIN_PROYECTO">Admin de Proyecto (Solo un proyecto)</option>
                                        </select>
                                    </div>

                                    {/* Selector de Proyecto (Visible solo si hay proyectos) */}
                                    <div id="project-selector-container">
                                        <label className="block text-sm font-medium text-gray-300 mb-1">Asignar a Proyecto (Opcional para Admin Empresa)</label>
                                        <select
                                            id="project-selector"
                                            className="w-full px-4 py-2 bg-black/30 border border-white/20 rounded-lg text-white focus:outline-none focus:border-blue-500"
                                            disabled={selectedEmpresaForInvite.proyectos.length === 0}
                                        >
                                            <option value="">-- Sin Proyecto Espec√≠fico --</option>
                                            {selectedEmpresaForInvite.proyectos.map((p) => (
                                                <option key={p.id} value={p.id}>{p.nombre}</option>
                                            ))}
                                        </select>
                                        {selectedEmpresaForInvite.proyectos.length === 0 && (
                                            <p className="text-xs text-orange-400 mt-1">Esta empresa no tiene proyectos creados.</p>
                                        )}
                                    </div>

                                    <div>
                                        <label className="block text-sm font-medium text-gray-300 mb-1">Correo del Usuario</label>
                                        <input
                                            type="email"
                                            value={inviteEmail}
                                            onChange={(e) => setInviteEmail(e.target.value)}
                                            placeholder="usuario@empresa.com"
                                            className="w-full px-4 py-2 bg-black/30 border border-white/20 rounded-lg text-white focus:outline-none focus:border-blue-500"
                                        />
                                    </div>
                                    <div className="flex gap-3">
                                        <button
                                            onClick={() => setShowInviteModal(false)}
                                            className="flex-1 py-2 bg-white/5 hover:bg-white/10 text-gray-300 rounded-lg transition-colors"
                                        >
                                            Cancelar
                                        </button>
                                        <button
                                            onClick={handleInvite}
                                            disabled={!inviteEmail || processing === 'invite'}
                                            className="flex-1 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg font-medium transition-colors disabled:opacity-50"
                                        >
                                            {processing === 'invite' ? 'Generando...' : 'Generar Link'}
                                        </button>
                                    </div>
                                </div>
                            )}
                        </div>
                    </div>
                )}

                {/* Modal de Creaci√≥n de Empresa */}
                {showCreateModal && (
                    <div className="fixed inset-0 bg-black/50 backdrop-blur-sm flex items-center justify-center p-4 z-50">
                        <div className="bg-gray-900 border border-white/10 rounded-2xl p-6 max-w-2xl w-full shadow-2xl max-h-[90vh] overflow-y-auto">
                            <h3 className="text-xl font-bold text-white mb-4">Nueva Empresa</h3>

                            <div className="space-y-4">
                                <div>
                                    <label className="block text-sm font-medium text-gray-300 mb-1">Nombre de la Empresa</label>
                                    <input
                                        type="text"
                                        value={newEmpresaData.nombre}
                                        onChange={(e) => setNewEmpresaData({ ...newEmpresaData, nombre: e.target.value })}
                                        className="w-full px-4 py-2 bg-black/30 border border-white/20 rounded-lg text-white focus:outline-none focus:border-blue-500"
                                        placeholder="Ej: Constructora Global"
                                    />
                                </div>
                                <div>
                                    <label className="block text-sm font-medium text-gray-300 mb-1">Descripci√≥n (Opcional)</label>
                                    <textarea
                                        value={newEmpresaData.descripcion}
                                        onChange={(e) => setNewEmpresaData({ ...newEmpresaData, descripcion: e.target.value })}
                                        checked={newEmpresaData.crearProyecto}
                                        onChange={(e) => setNewEmpresaData({ ...newEmpresaData, crearProyecto: e.target.checked })}
                                        className="w-4 h-4 rounded border-gray-600 text-blue-600 focus:ring-blue-500 bg-gray-700"
                                    />
                                    <span className="text-sm font-medium text-white">Crear Proyecto Inicial</span>
                                </label>

                                {newEmpresaData.crearProyecto && (
                                    <div className="animate-fade-in-up">
                                        <label className="block text-sm font-medium text-gray-300 mb-1">Nombre del Proyecto</label>
                                        <input
                                            type="text"
                                            value={newEmpresaData.proyectoNombre}
                                            onChange={(e) => setNewEmpresaData({ ...newEmpresaData, proyectoNombre: e.target.value })}
                                            className="w-full px-4 py-2 bg-black/30 border border-white/20 rounded-lg text-white focus:outline-none focus:border-blue-500"
                                            placeholder="Ej: Proyecto Piloto"
                                        />
                                    </div>
                                )}
                            </div>

                            <div className="flex gap-3 pt-2">
                                <button
                                    onClick={() => setShowCreateModal(false)}
                                    className="flex-1 py-2 bg-white/5 hover:bg-white/10 text-gray-300 rounded-lg transition-colors"
                                >
                                    Cancelar
                                </button>
                                <button
                                    onClick={handleCreateEmpresa}
                                    disabled={!newEmpresaData.nombre || (newEmpresaData.crearProyecto && !newEmpresaData.proyectoNombre) || processing === 'create'}
                                    className="flex-1 py-2 bg-green-600 hover:bg-green-700 text-white rounded-lg font-medium transition-colors disabled:opacity-50"
                                >
                                    {processing === 'create' ? 'Creando...' : 'Crear Empresa'}
                                </button>
                            </div>
                        </div>
                    </div>
                    </div>
                )}

            {/* Modal de Creaci√≥n de Proyecto */}
            {showProjectModal && selectedEmpresaForProject && (
                <div className="fixed inset-0 bg-black/50 backdrop-blur-sm flex items-center justify-center p-4 z-50">
                    <div className="bg-gray-900 border border-white/10 rounded-2xl p-6 max-w-lg w-full shadow-2xl max-h-[90vh] overflow-y-auto">
                        <h3 className="text-xl font-bold text-white mb-2">Nuevo Proyecto</h3>
                        <p className="text-gray-400 text-sm mb-4">
                            Agregando proyecto a <strong>{selectedEmpresaForProject.nombre}</strong>
                        </p>

                        <div className="space-y-4">
                            <div>
                                <label className="block text-sm font-medium text-gray-300 mb-1">Nombre del Proyecto</label>
                                <input
                                    type="text"
                                    value={newProjectData.nombre}
                                    onChange={(e) => setNewProjectData({ ...newProjectData, nombre: e.target.value })}
                                    className="w-full px-4 py-2 bg-black/30 border border-white/20 rounded-lg text-white focus:outline-none focus:border-blue-500"
                                    placeholder="Ej: Edificio Norte"
                                />
                            </div>
                            <div>
                                <label className="block text-sm font-medium text-gray-300 mb-1">Descripci√≥n (Opcional)</label>
                                <textarea
                                    value={newProjectData.descripcion}
                                    onChange={(e) => setNewProjectData({ ...newProjectData, descripcion: e.target.value })}
                                    className="w-full px-4 py-2 bg-black/30 border border-white/20 rounded-lg text-white focus:outline-none focus:border-blue-500 h-20 resize-none"
                                    placeholder="Breve descripci√≥n..."
                                />
                            </div>

                            {/* Configuraci√≥n de origen seg√∫n tipo de empresa */}
                            <div className="border-t border-white/10 pt-4">
                                <label className="block text-sm font-medium text-white mb-2">
                                    üìä Configuraci√≥n de Origen de Datos
                                </label>
                                <p className="text-xs text-gray-400 mb-3">
                                    Esta empresa usa: <strong className="text-white">
                                        {selectedEmpresaForProject.tipo_datos === 'lukeapp' && 'üóÑÔ∏è LukeApp'}
                                        {selectedEmpresaForProject.tipo_datos === 'google' && 'üìä Google Sheets'}
                                        {selectedEmpresaForProject.tipo_datos === 'sharepoint' && 'üìÅ SharePoint'}
                                    </strong>
                                </p>

                                {selectedEmpresaForProject.tipo_datos === 'google' && (
                                    <div className="bg-green-500/10 border border-green-500/30 rounded-lg p-4">
                                        <label className="block text-sm font-medium text-green-300 mb-2">
                                            ID de Google Sheets para este proyecto
                                        </label>
                                        <input
                                            type="text"
                                            value={newProjectData.googleSheetsId}
                                            onChange={(e) => setNewProjectData({ ...newProjectData, googleSheetsId: e.target.value })}
                                            className="w-full px-4 py-2 bg-black/30 border border-green-500/30 rounded-lg text-white focus:outline-none focus:border-green-500"
                                            placeholder="1BxiMVs0XRA5nFMdKvBdBZjgmUUqptlbs74OgvE2upms"
                                        />
                                        <p className="text-xs text-gray-400 mt-2">
                                            üí° ID de la hoja de Google Sheets espec√≠fica para este proyecto
                                        </p>
                                    </div>
                                )}

                                {selectedEmpresaForProject.tipo_datos === 'sharepoint' && (
                                    <div className="bg-blue-500/10 border border-blue-500/30 rounded-lg p-4">
                                        <label className="block text-sm font-medium text-blue-300 mb-2">
                                            URL de SharePoint para este proyecto
                                        </label>
                                        <input
                                            type="text"
                                            value={newProjectData.sharepointUrl}
                                            onChange={(e) => setNewProjectData({ ...newProjectData, sharepointUrl: e.target.value })}
                                            className="w-full px-4 py-2 bg-black/30 border border-blue-500/30 rounded-lg text-white focus:outline-none focus:border-blue-500"
                                            placeholder="https://tuempresa.sharepoint.com/sites/proyecto"
                                        />
                                        <p className="text-xs text-gray-400 mt-2">
                                            üí° URL del sitio de SharePoint espec√≠fico para este proyecto
                                        </p>
                                    </div>
                                )}

                                {selectedEmpresaForProject.tipo_datos === 'lukeapp' && (
                                    <div className="bg-purple-500/10 border border-purple-500/30 rounded-lg p-4">
                                        <p className="text-sm text-purple-300">
                                            ‚úÖ Los datos se almacenar√°n en la base de datos de LukeApp
                                        </p>
                                        <p className="text-xs text-gray-400 mt-1">
                                            No requiere configuraci√≥n adicional
                                        </p>
                                    </div>
                                )}
                            </div>

                            <div className="flex gap-3 pt-2">
                                <button
                                    onClick={() => setShowProjectModal(false)}
                                    className="flex-1 py-2 bg-white/5 hover:bg-white/10 text-gray-300 rounded-lg transition-colors"
                                >
                                    Cancelar
                                </button>
                                <button
                                    onClick={handleCreateProject}
                                    disabled={!newProjectData.nombre || processing === 'createProject'}
                                    className="flex-1 py-2 bg-purple-600 hover:bg-purple-700 text-white rounded-lg font-medium transition-colors disabled:opacity-50"
                                >
                                    {processing === 'createProject' ? 'Creando...' : 'Crear Proyecto'}
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            )}
        </div>
        </div >
    )
}

export default function GestionEmpresasPage() {
    return (
